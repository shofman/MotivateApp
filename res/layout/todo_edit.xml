<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/editTodoScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tablePriorityRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/priorityEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/display_for_edit_priority" />

                <Spinner
                    android:id="@+id/priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/priorities" />
            </TableRow>

            <TableRow
                android:id="@+id/tableLabelRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/labelEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/display_for_edit_label" />

                <Spinner
                    android:id="@+id/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/priorities" />
            </TableRow>

            <TableRow
                android:id="@+id/tableSummaryRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/todo_edit_summary"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/todo_edit_summary"
                    android:imeOptions="actionNext" />
            </TableRow>

            <TableRow
                android:id="@+id/tableDescriptionRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/descriptionEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/display_for_edit_description" />
            </TableRow>

            <EditText
                android:id="@+id/todo_edit_description"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_weight="0.60"
                android:gravity="top"
                android:hint="@string/todo_edit_description"
                android:imeOptions="actionNext" />
            
            <TableRow
                android:id="@+id/tableDueDateRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/dueDateEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/display_for_edit_duedate" />
                <Button 
                    android:id="@+id/setDueDateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_due_date"/>
            </TableRow>
            <TableRow
                android:id="@+id/tableOptionsRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <CheckBox
                    android:id="@+id/dailyCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/display_for_edit_daily" />

                <CheckBox
                    android:id="@+id/reminderCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/display_for_edit_reminder" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/todo_edit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/todo_edit_confirm" />

</LinearLayout><!--
